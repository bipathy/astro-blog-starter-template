---
export const prerender = false;

import BaseHead from "../components/BaseHead.astro";
import { authenticateUser, loginAndSetCookie } from "../lib/auth";

let error = "";

if (Astro.request.method === "POST") {
  const form = await Astro.request.formData();
  const username = form.get("username")?.toString() ?? "";
  const password = form.get("password")?.toString() ?? "";
  const redirectTo = Astro.url.searchParams.get("redirect") || "/private";

  const valid = await authenticateUser(username, password, Astro.locals.runtime.env);

  if (valid) {
    await loginAndSetCookie(username, Astro.cookies, Astro.locals.runtime.env);
    return Astro.redirect(redirectTo);
  }

  error = "Invalid username or password.";
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Login" description="Login to UnityDruid" />
  </head>
  <body>
    <main>
      <h1>Login</h1>
      {error && <p class="error">{error}</p>}
      <form method="POST">
        <label>
          Username
          <input type="text" name="username" required autocomplete="username" />
        </label>
        <label>
          Password
          <input type="password" name="password" required autocomplete="current-password" />
        </label>
        <button type="submit">Log in</button>
      </form>
      <a href="/" class="back-link">Back to home</a>
    </main>
  </body>
</html>

